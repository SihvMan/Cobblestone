<Defs>

<ThingDef ParentName="StoneBlocksBase">
	<defName>Sihv_BlocksCobblestone</defName>
	<label>cobblestone blocks</label>
	<description>Blocks of mixed stone, called cobblestonestone.</description>
	<graphicData>
		<color>(96,96,96)</color>
	</graphicData>
	<statBases>
		<MarketValue>1</MarketValue>
		<Mass>1</Mass>
 		<SharpDamageMultiplier>0.4</SharpDamageMultiplier>
	</statBases>
	<stuffProps>
		<color>(96,96,96)</color>
		<soundImpactStuff>BulletImpactGround</soundImpactStuff>
		<soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
		<soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
		<stuffAdjective>cobblestone</stuffAdjective>
		<statFactors>
			<Beauty>0.9</Beauty>  
  			<MarketValue>0.4</MarketValue>
			<MaxHitPoints>1.1</MaxHitPoints>
			<WorkToBuild>4.0</WorkToBuild>
			<WorkToMake>1.1</WorkToMake>
		</statFactors>
	</stuffProps>
</ThingDef>

<ThingDef ParentName="StoneBlocksBase">
	<defName>Sihv_BlocksReinforcedCobblestone</defName>
	<label>reinforced cobblestone blocks</label>
	<description>Blocks of mixed stone, called cobblestonestone, reinforced with steel for extra durability.</description>
	<graphicData>
		<color>(100,100,100)</color>
	</graphicData>
	<statBases>
		<MarketValue>1.8</MarketValue>
		<Mass>1.1</Mass>
 		<SharpDamageMultiplier>0.4</SharpDamageMultiplier>
	</statBases>
	<stuffProps>
		<color>(100,100,100)</color>
