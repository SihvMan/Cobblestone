		<soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
		<soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
		<stuffAdjective>reinforced cobblestone</stuffAdjective>
		<statFactors>
			<Beauty>1.1</Beauty>  
  			<MarketValue>0.4</MarketValue>
			<MaxHitPoints>1.7</MaxHitPoints>
			<WorkToBuild>5.5</WorkToBuild>
			<WorkToMake>1.2</WorkToMake>
		</statFactors>
	</stuffProps>
</ThingDef>

<RecipeDef ParentName="MakeStoneBlocksBase">
	<defName>Sihv_MakeStoneBlocksCobblestone</defName>
	<label>make cobblestone blocks</label>
	<description>Combines various stone blocks into cobblestone blocks for mixed usage.</description>
	<allowMixingIngredients>true</allowMixingIngredients>
	<ingredients>
		<li>
			<filter>
				<categories>
					<li>StoneBlocks</li>
				</categories>
			</filter>
			<count>5</count>
		</li>
	</ingredients>
	<fixedIngredientFilter>
		<categories>
			<li>StoneBlocks</li>
		</categories>
		<exceptedThingDefs>
			<li>Sihv_BlocksReinforcedCobblestone</li>
		</exceptedThingDefs>
	</fixedIngredientFilter>
	<defaultIngredientFilter>
		<categories>
			<li>StoneBlocks</li>
		</categories>
		<exceptedThingDefs>
			<li>Sihv_BlocksCobblestone</li>
		</exceptedThingDefs>
	</defaultIngredientFilter>
	<products>
		<Sihv_BlocksCobblestone>5</Sihv_BlocksCobblestone>
	</products>
	<targetCountAdjustment>5</targetCountAdjustment>
	<workAmount>100</workAmount>
</RecipeDef>

